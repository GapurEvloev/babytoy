.brands__list
	display -webkit-flex
	display -moz-flex
	display -ms-flex
	display -o-flex
	display flex
	flex-wrap wrap
	& > *
		margin-right 10px
		margin-bottom 10px
		&:nth-child(6n + 6)
			margin-right 0	
	&.brands__list--small
		& > *
			&:nth-child(3n + 3)
				margin-right 0	
.brands
	display flex
	flex-direction column
	align-items center
	color main-shaft
	&__img
		margin-bottom 5px
		width 110px
		height 80px
		display flex
		flex-direction column
		align-items center
		justify-content center
		background-color: white
		transition .2s all linear
		&:hover
			box-shadow: 0 5px 10px 0 rgba(0, 0, 0, 0.1), 0 2px 5px 0 rgba(0, 0, 0, 0.05);
		img
			max-width 100%
			max-height 100%
			
		