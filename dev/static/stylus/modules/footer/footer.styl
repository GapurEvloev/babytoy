footer
  flex 0 0 auto
.footer
	background-color: athens-gray
	&__main
		padding: 40px 0
		.container
			display: flex
			align-items: flex-start
	&__navigation
		display: flex
		align-items: flex-start
	&__item
		display: flex
		flex-direction: column
		margin-right: 130px
		max-width: 215px
		&:last-child
			margin-right: 0
		& > *
			margin: 15px 0
			&:first-child
				margin-top: 0
			&:last-child
				margin-bottom: 0
	&__socials
		padding-bottom: 30px
		.container
			display flex
			align-items center
	&__bottom
	  background-color: rgba(0, 0, 0, 0.05);
	  padding: 20px 0;
	  .container
	  	display -webkit-flex
	  	display -moz-flex
	  	display -ms-flex
	  	display -o-flex
	  	display flex
	  	justify-content space-between
	  	align-items center
	&__contacts
		margin-left: auto
		text-align: right
	&__phones
		display: flex
		flex-direction: column
		margin-bottom: 20px
		& > *
			margin: 5px 0
			&:first-child
				margin-top: 0
			&:last-child
				margin-bottom: 0
	&__phone
		font-size: 20px
		font-weight: 600
		color: main-shaft
	&__mail
		color: main-shaft
	&-nav
		&__item
			margin-bottom: 15px
			&:last-child
				margin-bottom: 0
		&__link
			color main-shaft
			&:hover
				transition-duration
	&__address
		line-height: 1.79
  &__personal-data
  	color oslo-gray
.socials
	display: flex
	align-items: center
	&__item
		& > *
			margin-right: 50px
		&:last-child
			margin-right: 0
	&__link
		& > *
			margin-right: 20px
		color: oslo-gray
	&__name
		color: oslo-gray
.yandex-market
	margin-left: auto
	display: flex
	align-items: center
	& > *
		margin-right: 20px
		&:last-child
			margin-right: 0
