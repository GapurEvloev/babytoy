.s-banner
  padding-bottom 0
.banner
  background-image: linear-gradient(255deg, #ffb800, #ff6d00);
  height: 300px
  padding: 0 90px
  position: relative
  -webkit-border-radius: 4px
  -moz-border-radius: 4px
  border-radius: 4px
  overflow hidden
  &__navigation
    width: 50px
    height: 50px
    -webkit-border-radius: 50%
    -moz-border-radius: 50%
    border-radius: 50%
    background-color: rgba(white,.2)
    display: flex
    align-items: center
    justify-content: center
    cursor: pointer
    position: absolute
    top: 50%
    margin-top: -25px
    transition .3s all linear
    &--prev
      left: 30px
    &--next
      right: 30px
      transform: rotate(180deg);
    &:hover
      background-color: rgba(white,.5)
    &-icon
      height: 20px
      width: 15px
      fill rgba(black,.5)
  &__item
    outline none 
  &__content
    display: flex
    padding: 30px 0
  &__body
    flex: 1
    color white
  &__title
    display block
    font-size: 50px
    line-height: 1
    margin-bottom: 15px
  &__descr
    display block
    font-size: 18px
    line-height: 1.67
    margin-bottom 40px  
  &__img
    max-width: 100%
    max-height: 240px
    &-wrapper
      flex: 0 0 40%
      width: 40%
      text-align: center
  &__dot
    height: 10px
    width: 10px
    background-color: rgba(38, 38, 39, 0.3)
    -webkit-border-radius: 50%
    -moz-border-radius: 50%
    border-radius: 50%
    display: block
    cursor pointer  
  &__dots
    position absolute
    bottom 20px
    left 50%
    transform translateX(-50%)
    z-index 55   
    .slick-dots
      display -webkit-flex
      display -moz-flex
      display -ms-flex
      display -o-flex
      display flex  
      align-items center  
      li
        margin 0  5px
        &.slick-active
          a
            background-color: white
            
            