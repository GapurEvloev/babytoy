.btn
	height 40px
	border 1px	solid blaze-orange
	border-radius 4px
	line-height 38px
	font-size 14px
	color blaze-orange
	font-weight 600
	background-color: white
	padding 0 20px
	display block
	text-align center
	outline none
	transition .3s all 	linear
	cursor pointer
	width 100%
	font-family inherit
	cursor: pointer
	&:hover
		background-color: blaze-orange
		color: #ffffff;
	&.btn
		&--transparent
			&-gray
				background-color: transparent
				border-color: rgba(oslo-gray,.3)
				color: oslo-gray
				&:hover
					background-color: rgba(oslo-gray,.3)
					color: white
			&-white
				color white
				background-color transparent
				border-color: white
				&:hover
					background-color white
					color tundora
		&--round
			border-radius 20px
		&--inline
			display inline-block
			width: auto
	&--small
		height: 30px
		padding: 0 15px
		line-height: 28px

