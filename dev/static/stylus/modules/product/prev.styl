.product
	&-prev
		padding 20px
		position relative
		padding-top 190px
		outline none
		margin 10px 15px 30px
		&:hover
			box-shadow: 0 10px 20px 0 rgba(0, 0, 0, 0.1), 0 2px 5px 0 rgba(0, 0, 0, 0.05)
		&__header
			position absolute
			top 20px
			left 20px
			right 20px
			height 160px
		&__img
			width auto//мой кастомный вариант
			height 100%
			outline none
			margin 0 auto
			&-wrap
				outline none
				height 160px
				
		&__body
			position relative
			padding-top 90px
			margin-bottom 20px
		&__title
			line-height 1.43
			font-weight 600
		&__info
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			flex-direction column
			position absolute
			top 0
			left 0
			right 0
		&__price
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items baseline
			margin-bottom 20px
			& > *
				margin-right 10px
				&:last-child
					margin-right 0
			&-old
				font-size 13px
				text-decoration line-through
				color tundora
			&-current
				font-size 20px
				font-weight 600
				color blaze-orange
		&__colors
			.slick-dots
				display -webkit-flex
				display -moz-flex
				display -ms-flex
				display -o-flex
				display flex
				li
					border 1px solid transparent
					border-radius 2px
					padding 2px
					outline none
					&.slick-active
						border 1px solid tundora
						a	
							outline none
							&:focus,
							&:hover
								outline none
		&__color
			display block
			height 20px
			width 20px
			border-radius 2px
			outline none