.header
	border-bottom 1px solid athens-gray
	&__nav
		&.header__nav
			&--right
				margin-left: auto
	&__top
		background-color athens-gray
		padding 10px 0
	&__content
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
	&__main
		padding 25px 0
		&-content
			display -webkit-flex
			display -moz-flex
			display -ms-flex
			display -o-flex
			display flex
			align-items center
			.logo
				margin-right 40px
				&__img
					height 22px
	&__phones
		display flex
		margin-right 90px
		& > *
			margin-right 30px
			&:last-child 
				margin-right 0
	&__link,
	&__desc
		border-bottom 1px dashed silver-chalice
		color silver-chalice
		font-size 12px
		line-height 1.67
		display inline-block	
	&__phone
		display block
		font-size 16px
		font-weight 600
		color tundora
		white-space nowrap
	&-address
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		flex 0 0 190px
		width 190px
		&__icon
			height 21px
			width 15px
			fill silver-chalice 
			flex 0 0 15px
			& > *
				margin-right 15px
				&:last-child 
					margin-right 0
		&__text
			font-size 12px
			line-height 1.67
			color tundora
	&__shop
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		margin-left auto
		flex 0 0 270px
		width 270px
		justify-content space-between
		& > *
			margin-right 10px
			&:last-child 
				margin-right 0
	&-goods
		&__price
			display block
			font-size 16px
			font-weight 600
			color tundora
			white-space nowrap
		&__count
			color silver-chalice
			font-size 12px
			line-height 1.67
			display block
	&-busket
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		align-items center
		height 40px
		padding 0 20px	
		border-radius 20px
		background-color: wild-sand
		color tundora
		font-weight 600
		cursor pointer
		&__icon
			height 20px
			width 20px
			fill blaze-orange
	&__search
		.search__icon
			margin-left calc(100% - 20px)